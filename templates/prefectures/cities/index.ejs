<%- include("../../layouts/header.ejs") -%>
<div class="my-10 px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-gray-900">Cities</h1>
    </div>
  </div>
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
          <tr class="divide-x divide-gray-200">
            <th scope="col"
                class="py-3.5 pl-4 pr-4 text-left text-sm font-semibold text-gray-900 sm:pl-0">
              City
            </th>
            <th scope="col"
                class="px-4 py-3.5 text-left text-sm font-semibold text-gray-900">
              Prefecture
            </th>
            <th scope="col"
                class="py-3.5 pl-4 pr-4 text-left text-sm font-semibold text-gray-900 sm:pr-0">
            </th>
          </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
          <% cities.forEach((city) => { %>
            <tr class="divide-x divide-gray-200">
              <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm font-medium text-gray-900 sm:pl-0">
                <%= city.city %>
              </td>
              <td class="whitespace-nowrap p-4 text-sm text-gray-500"><%= city.prefecture %></td>
              <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-blue-500 underline sm:pr-0">
                <a href="/api/hotwire/prefectures/<%= code %>/cities/<%= city.city %>">
                  <%= "郵便番号" %>
                </a>
              </td>
            </tr>
          <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%- include("../../layouts/footer.ejs") -%>
